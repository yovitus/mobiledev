<resources>
    <!-- Base application theme. -->
    <style name="Theme.ScooterSharing" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/amber_300</item>
        <item name="colorPrimaryVariant">@color/amber_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/indigo_300</item>
        <item name="colorSecondaryVariant">@color/indigo_300</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DurationAppearance">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="DigitalClockTextAppearance">
        <item name="android:fontFamily">@font/digital7</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@drawable/digital_clock_background</item>
    </style>

    <style name="Speed">
        <item name="android:fontFamily">@font/speed700</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="CurrentPrice">
        <item name="android:fontFamily">@font/greatsailor</item>
        <item name="android:letterSpacing">0.2</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>
</resources>